sub toggle_call_diagram {
  if ($display_mode eq "diagram") {
    $display_mode = "call summary";
    change_cl_view(0);
    clear_screen();
    cl_refresh_header();
    cl_paint_all();
  } else {
    $display_mode = "diagram";
    # Remove the Call-ID and GSID filters
    filter_call_summary(0);
    clear_screen();
    dg_paint_all();
  }
  change_mode($capture_mode,$display_mode);
}

sub toggle_full_screen {
  return if $prev_display_mode ne "details";
  if ($full_screen_details) {
    $full_screen_details = 0;
  } else {
    $full_screen_details = 1;
  }
  # Do not change the display mode (still in "details")
  $prev_display_mode = "diagram";
  dg_paint_all();
  view_details();
}

sub cl_paint_all {
  if ($need_resize) {
    display_message();
    return;
  }
  display_cl_records();
}

sub display_cl_records {
  my $cl_record_no = scalar (@display_cl_record);
  lock($cl_top_pos);lock($cl_rec_pos);

  for my $i ( $cl_top_pos .. $cl_top_pos+$max_row-5 ) {
    if (defined($display_cl_record[$i]) && $i == $cl_rec_pos) {
      cl_display_line($i, 1); 
    } else {
      cl_display_line($i, 0);
    }
  }
  $cl_need_refresh = 0;
}

sub cl_display_line {
  my ($y, $reverse) = @_;
  my $line;
  if (!($throttle)) {
    # Pause for 0.0001 seconds to avoid high CPU usage
    select(undef, undef, undef, 0.0001);
  }

  goto_xy(0,$y+3-$cl_top_pos);
  if ($reverse) {
    $line = generate_cl_line($y,"reverse");
  } else {
    $line = generate_cl_line($y,"");
  }
  print $line;
}

sub generate_cl_line {
  my ($index,$reverse) = @_;
  my $line = "";
#($start) = `date +%T.%N` =~ /(\d+\.\d+)/;
  # check if it is an empty line
  if ($index+1 > scalar(@display_cl_record)) {
    for (my $i=0; $i<scalar(@cl_column_width); $i++) {
      my $last_column = ($i == scalar(@cl_column_width)-1 ? 0 : 1);
      $line .= " " x ($cl_column_width[$i]-$last_column);
      if ($last_column == 1) {
        $line .= $vert_chr;
      }
    }
    return $line;
  }

  my $session_num = $display_cl_record[$index]{number};
  if ($reverse eq "" && $session_num ne "NA" && $session_num eq $display_cl_record[$cl_rec_pos]{number}) {
    $reverse = "bold";
  } 

  # line with content
  for (my $i=0; $i<scalar(@cl_column_width); $i++) {
    my $label = $display_cl_record[$index]{$cl_colum_keys[$i]};
    if ($cl_colum_keys[$i] eq state) {
      $label = get_state($index,$reverse);
    } elsif ($cl_colum_keys[$i] eq call_flow) {
       if ($display_cl_record[$index]{call_flow_refresh}) {
         $display_cl_record[$index]{call_flow} = get_call_flow($index,"");
         $label = $display_cl_record[$index]{call_flow};
         $display_cl_record[$index]{call_flow_refresh} = 0;
       }
       if ($reverse eq "reverse") {
         $label = reverse_color_string($label);
       } elsif ($reverse eq "bold") {
         $label = bold_color_string($label);
       }
    } elsif ($cl_colum_keys[$i] eq no_msgs) {
      my $num_messages = $display_cl_record[$index]{no_msgs_external};
      if ($show_asm) {
        $num_messages += $display_cl_record[$index]{no_msgs_internal};
      }
        
      $label = $session_num."/".$calls{$display_cl_record[$index]{cid}}{number}."/".$num_messages;
    }
    my $len = length_no_color($label);
    my $last_column = ($i == scalar(@cl_column_width)-1 ? 0 : 1);
    # Truncate the string to fit into the column
    if ($len > $cl_column_width[$i]-$last_column) {
      $label = colored(substr_color($label,0,$cl_column_width[$i]-1-$last_column),$reverse).colored(">",$reverse);
    } else {
      $label = colored(" " x ($cl_column_width[$i]-$last_column-$len),$reverse).colored($label,$reverse);
    }
    $line .= $label;
    if ($last_column == 1) {
      $line .= colored($vert_chr,$reverse); 
    }
  }
#($end) = `date +%T.%N` =~ /(\d+\.\d+)/;;
#printf TMP "$start $end Elapsed time: %.3f seconds!\n", $end - $start; 
  return $line;  
}

sub get_state {
  my ($index,$reverse) = @_;
  my $label = $display_cl_record[$index]{state}." - ".$display_cl_record[$index]{state_detail};
  my $color = "green";
  if ($display_cl_record[$index]{state} eq "Rejected") {
    $color = "red";
  } elsif ($display_cl_record[$index]{state} eq "Early") {
    $color = "yellow";
  } elsif ($display_cl_record[$index]{state} eq "Canceled") {
    $color = "blue";
  } 
  return colored($label,"$color $reverse");
}

sub get_call_flow {
  my ($index,$reverse) = @_;
  my $phase = "";
  my $label = "";
  my $last_cseq = "";

  for $cseq (sort {$a<=>$b} keys %{$display_cl_record[$index]{INV}}) {
    my $last_to_ip = "";
    my $response_count = 0;
    next if !exists($display_cl_record[$index]{INV}{$cseq});
    for my $i (0 .. $#{$display_cl_record[$index]{INV}{$cseq}{from_ip}}) {
      my $from_ip = $display_cl_record[$index]{INV}{$cseq}{from_ip}[$i];
      my $to_ip = $display_cl_record[$index]{INV}{$cseq}{to_ip}[$i];
      my $phase = "";
      $phase = "[".$display_cl_record[$index]{INV}{$cseq}{phase}[$i]."]" if $display_cl_record[$index]{INV}{$cseq}{phase}[$i] ne "";
      my $color_from = "cyan";
      $color_from = "" if $from_ip eq $asm_ip || $from_ip eq $sm100_ip || $from_ip eq $asm_ipv6 || $from_ip eq $sm100_ipv6;
      my $color_to = "cyan";
      $color_to = "" if $to_ip eq $asm_ip || $to_ip eq $sm100_ip || $to_ip eq $asm_ipv6 || $to_ip eq $sm100_ipv6; 

      # Add the INVITE
      if ($last_to_ip eq $from_ip) {
        if ($show_asm || ($to_ip ne $asm_ip && $to_ip ne $asm_ipv6 && $to_ip ne "127.0.0.1" && $to_ip ne "::1" && $to_ip ne "127.0.0.2" && $to_ip ne "::2")) {
          $label .= colored($phase,"$color_from $reverse").colored("->".($display_name?get_ip_name($to_ip):$to_ip),"$color_to $reverse");
          $last_to_ip = $to_ip;
        }  
      } else {
	if ($show_asm || (($to_ip ne $asm_ip && $to_ip ne $asm_ipv6 && $to_ip ne "127.0.0.1" && $to_ip ne "::1" && $to_ip ne "127.0.0.2" && $to_ip ne "::2") && ($from_ip ne $asm_ip && $from_ip ne $asm_ipv6 && $from_ip ne "127.0.0.1" && $from_ip ne "::1" && $from_ip ne "127.0.0.2" && $from_ip ne "::2"))) {
          if ($last_cseq == $cseq) {
            $label .= colored(" ",$reverse);
          }
          $label .= colored(($display_name?get_ip_name($from_ip):$from_ip).$phase,"$color_from $reverse").colored("->".($display_name?get_ip_name($to_ip):$to_ip),"$color_to $reverse");
          $last_to_ip = $to_ip;
        }   
      }

      # Add responses
      my $resp_code = "";
      if (($show_asm || (($to_ip ne $asm_ip && $to_ip ne $asm_ipv6 && $to_ip ne "127.0.0.1" && $to_ip ne "::1" && $to_ip ne "127.0.0.2" && $to_ip ne "::2")  && ($from_ip ne $asm_ip && $from_ip ne $asm_ipv6 && $from_ip ne "127.0.0.1" && $from_ip ne "::1" && $from_ip ne "127.0.0.2" && $from_ip ne "::2"))) && exists($display_cl_record[$index]{INV}{$cseq}{resp_code}{$display_cl_record[$index]{INV}{$cseq}{via}[$i]})) {
        $resp_code = $display_cl_record[$index]{INV}{$cseq}{resp_code}{$display_cl_record[$index]{INV}{$cseq}{via}[$i]};
      }
      if ($resp_code ne "") {
        if ($resp_code == 200) {
          $color = "green";
        } else {
          $color = "red";
        }
        #$label .= colored("(",$reverse).colored($resp_code,$color.' '.$reverse).colored(")",$reverse);
        $label .= colored("(".$resp_code.")",$color.' '.$reverse);
      }
      $last_cseq = $cseq; 
    }
    $label .= colored(" ",$reverse);
  }
  return $label;
}

# Return the length of the string not counting the color (escaped) characters
sub length_no_color {
  $no_color_string = shift;

  # color is encoded with an ESC (27) and ends with m (109) 
  $no_color_string =~ s/\e(.*?m)//g;
  return length($no_color_string);
}

sub reverse_color_string {
  my ($color_string) = @_;

  $color_string =~ s/(\e\[[\d;]*m)/\e\[7m$1\e\[7m/g;
  return $color_string;
}

sub bold_color_string {
  my ($color_string) = @_;

  $color_string =~ s/(\e\[[\d;]*m)/\e\[1m$1\e\[1m/g;
  return $color_string;
}

sub substr_color {
  my ($color_string, $start, $len) = @_;
  # get an array with only the text, and another with the colors
  my @non_color_string = split(/\e\[[\d;]*m/,$color_string);
  my @color_att = ($color_string =~ /\e\[[\d;]*m/g);

  my $substr = "";
  my $curr_len = 0;
  my $started = 0;
  for (my $i=0; $i<scalar(@non_color_string); $i++) {
    $curr_len += length($non_color_string[$i]);
    next if $curr_len < $start;
    if (!$started) {
      $non_color_string[$i] = substr($non_color_string[$i],$start-($curr_len-length($non_color_string[$i])));
      $started = 1;
    }
    if ($curr_len <= $len) {
      $substr .= $non_color_string[$i].$color_att[$i];
      next;
    } else {
      $substr .= substr($non_color_string[$i],0,-($curr_len-$len));
      if ($i % 2) {
        $substr .= $color_att[$i];
      }
      last;
    }
  }
  return $substr;
}

sub calulate_cl_column_width {
  @cl_column_width = @cl_column_width_min;
  
  my $w = get_cl_column_width();
  return if $w > $max_col;
  my $i = 0;
  my $no_columns = scalar(@cl_column_width);
  while ($w < $max_col) {
    if ($cl_column_width_max[$i % $no_columns] == $cl_column_width[$i % $no_columns]) {
      $i++;
      next;
    }
    $cl_column_width[$i % $no_columns]++;
    $w = get_cl_column_width();
    $i++; 
  }    
}

sub get_cl_column_width {
  my $w = 0;
  foreach (@cl_column_width) { $w += $_ };
  return $w;
}

sub cl_refresh_header {
  my $high_line;
  my $title_line;
  my $low_line;

  calulate_cl_column_width();

  for ($i=0; $i<scalar(@cl_column_width); $i++) {
    $high_line .= $line_chr x ($cl_column_width[$i]-1);
    my $column_label = " " x (($cl_column_width[$i]-1)/2-length($cl_colum_name[$i])/2).$cl_colum_name[$i];
    $title_line .= $column_label." " x (($cl_column_width[$i]-1)-length($column_label));
    $low_line .= $line_chr x ($cl_column_width[$i]-1);
    if ($i != scalar(@cl_column_width)-1) {
      $high_line .= $vert_sep_l_chr;
      $title_line .= $vert_chr; 
      $low_line .= $vert_horiz;
    } else {
      $high_line .= $line_chr;
      $title_line .= " "; 
      $low_line .= $line_chr;
    } 
  }
  goto_xy(0,0);
  print "$high_line\n";
  print "$title_line\n";
  print "$low_line\n";
    
}

sub cl_init_positions {
  $pos = shift;
  lock($cl_top_pos);lock($cl_rec_pos);
  my $cl_record_no = keys(%call_summary);

  if ($pos eq "top") {
    $cl_rec_pos = $cl_record_no?0:-1;
    $cl_top_pos = 0;
    $prev_cl_rec_pos = $cl_rec_pos;
    $prev_cl_top_pos = $cl_top_pos;
    $prev_cl_record_no = $cl_record_no;
  } elsif ($pos eq "bottom") {
    $prev_cl_rec_pos = 1;
    $prev_cl_top_pos = 1;
    $prev_cl_record_no = $cl_record_no;
    $cl_top_pos = max($cl_record_no-1-($max_row-5),0);
    $cl_rec_pos = max($cl_record_no-1,0);
    $prev_cl_rec_pos = $cl_rec_pos;
  }
  $cl_view = 0;
}

sub filter_call_summary {
  my $filter = shift;
  my $w = 30;
  my $h = 3;
  my ($x, $y);

  $display_mode = "filter call summary";
  create_box($w,$h);
  $x = ($max_col - $w-2)/2 + 1;
  $y = $dg_top_margin + ($max_row-$dg_top_margin-1 - $h-2)/2 + 2;
  goto_xy($x, $y);
  print "       Please wait...";

  # Apply the Call-ID or GSID filer
  if ($filter) {
    my $my_gsi = $display_cl_record[$cl_rec_pos]{gsi};

    $global_session_id = $my_gsi;
    if ($my_gsi) {
      $call_id = "";
      create_gsi_call_id_filter($my_gsi);
    } else {
      $call_id = $display_cl_record[$cl_rec_pos]{cid};
      $gsi_call_id = "";
    }
    $display_asm = 0;

  # Remove the filter
  } else {
    # Remove Call-ID and Global Session ID filters
    $global_session_id = "";
    $gsi_call_id = "";
    $call_id = "";
  }
  change_mode($capture_mode,$display_mode);
  refilter();
}

sub update_session_number {
  my ($my_gsi,$my_cid) = @_;

  my $session_number = $call_summary{$my_cid}{number};
 
  get_related_call_ids($my_gsi);

  # Change all related Call-IDs
  foreach $cid (keys %result_call_id) {
    $call_summary{$cid}{number}=$session_number;
  }
}

sub get_related_call_ids {
  my $my_gsi = shift;

  %result_call_id = ();
  %visited_gsi = ();

  get_recursive_call_id($my_gsi);

  # For each of the found call-ids, look if there is a non visisted GSI
  foreach $cid (keys %result_call_id) {
    foreach $gsi (keys %{$calls{$cid}{global_session_id}}) {
      get_recursive_call_id($gsi) if $gsi ne "" && !exists($visited_gsi{$gsi});
    }
  }

#  # For each of the found call-ids, look if there is a non visisted GSI
#  START_OVER:
#  foreach $gsi (keys %sessions) {
#    next if exists($visited_gsi{$gsi});
#    foreach $cid (keys %{$sessions{$gsi}{call_id}}) {
#      if (exists($result_call_id{$cid})) {
#print TMP "trying call-id $calls{$cid}{number} $gsi\n";
#        get_recursive_call_id($gsi);
#        # Agly code using goto. If a new call_id is added, then need to check all again
#        goto START_OVER;
#      }
#    }
#  }

}

sub create_gsi_call_id_filter_from_regexp {
  my $regex_gsi = shift;

  $gsi_call_id = ""; 
  foreach $gsi (keys %sessions) {
    if ($gsi =~ /$regex_gsi/) { 
      get_related_call_ids($gsi);
      $gsi_call_id .= join("|",keys %result_call_id)."|";
    }
  }
  chop($gsi_call_id);
}

sub create_gsi_call_id_filter {
  my $my_gsi = shift;

  $gsi_call_id = "";
  get_related_call_ids($my_gsi);

  $gsi_call_id = join("|",keys %result_call_id);
}

sub get_recursive_call_id {
  my $gsi = shift;

  return if !exists($sessions{$gsi});
#print TMP "get_recursive_call_id $gsi $sessions{$gsi}\n";
#printstack();
#STDERR->fdopen( \*TMP,  'w' ) or die $!;
  my $agsi = $sessions{$gsi}{agsi};

  # mark visited gsi
  return if exists($visited_gsi{$gsi});
  $visited_gsi{$gsi} = 1;

  # Add the direct GSI call_ids
  foreach (keys %{$sessions{$gsi}{call_id}}) {
#print TMP "added direct $calls{$_}{number}\n";
    $result_call_id{$_}=1;
  }

  # Add associated call_ids
  foreach (keys %sessions) {
    if ($_ eq $agsi || $sessions{$_}{agsi} eq $gsi) {
#print TMP "going recur $_ gsi $gsi\n";
      get_recursive_call_id($_);
    }
  }
}

sub change_cl_view {
  $cl_view = shift;
  # cl_view = 0 displays all the columns (time, from, to, etc...)
  # cl_view = 1 displays only time and call_flow
  if (!$cl_view) {
    @cl_colum_name = ("Time", "From", "To", "Request-URI", "State", "Ses/Call/Mgs", "Call flow");
    @cl_colum_keys = (start_time, from, to, request_uri, state, no_msgs, call_flow);
    @cl_column_width_max = (13, 18, 18, 30, 30, 13, 1000);
    @cl_column_width_min = (13, 10, 10, 10, 10, 13, 7);
  } else {
    #@cl_colum_name = ("Time", "Call flow");
    #@cl_colum_keys = (start_time, call_flow);
    #@cl_column_width_max = (13, 1000);
    #@cl_column_width_min = (13, 7);
    @cl_colum_name = ("Time", "Ses/Call/Mgs", "Call flow");
    @cl_colum_keys = (start_time, no_msgs, call_flow);
    @cl_column_width_max = (13, 13, 1000);
    @cl_column_width_min = (13, 13, 15);
  }
}

sub file_type {
  my $filename = shift @_;
  local $SIG{CHLD} = 'IGNORE';

#print TMP "file: $filename\n";
  $result = `grep "com.avaya.asm  SIPMSGT " -m 1 -c "$filename"`;
  chop($result);
#print TMP "result: $result\n";
  if ($result eq "1") {
#print TMP "File type: asset\n";
    return "asset";
  } else {
    $result = `grep -P "(FINE|FINER) \\[com.avaya.ccs.ppm" -m 1 -c "$filename"`;
    chop($result);
#print TMP "result $result\nfilename $filename\n";
    if ($result eq "1") {
      return "ppm";
#print TMP "File type: ppm\n";
#print TMP "File type: ppm\n";
    } else {
      $result = `grep -P ' DBH:     SIGNAL: \\[\\S+\\] (RECEIVED|SENT)' -m 1 -c "$filename"`;
      chop($result);
      if ($result eq "1") {
#print TMP "File type: onexc\n";
        return "onexc";
      } else {
        $result = `grep -P '\\] (RECEIVED|SENDING) \\d+ bytes (from|to) .* {' -m 1 -c "$filename"`;
        chop($result);
        if ($result eq "1") {
#print TMP "File type: IOS\n";
          return "ios";
        } else {
          $result = `grep -P 'Frame \\d+: \\d+ bytes on wire .* bytes captured' -m 1 -c "$filename"`;
          chop($result);
            if ($result eq "1") {
#print TMP "File type: TLS\n";
              return "tls";
            } else {
#print TMP "File type: asm\n";
              return "asm";
          }
        }
      }
    }
  }
}

sub printstack {
  my $i = 1;
  for (;;) {
    my ($package, $filename, $line, $subroutine) = caller($i);
    last if (!defined(scalar caller($i))); 
    #print TMP "Subroutine: $subroutine; Line: $line; Arg: ${DB::args[0]}\n";
    $i++;
  }
}

sub read_metadata {
  my $line = shift;
  if ($line =~ /^name_ip: (.*);$/) {
    my @tuple = split(";", $1);
    foreach (@tuple) {
      (my $ip, my $name) = split("->", $_);
      $name_ip{$ip} = $name;
    }
  }
  ## Not needed for written file, but need some other sync for raw files
#  elsif ($line =~ /^offset: (.*);$/) {
#    my @tuple = split(";", $1);
#    foreach (@tuple) {
#      (my $sm_name, my $offset) = split("->", $_);
#      if ($offset ne "") {
         # This crashes the script
#        #$core_sms{$sm_name} = {"offset" => $offset};
#      }
#    }
#  }
}

sub first_time_cygwin_old_install {
  local $SIG{CHLD} = 'IGNORE';
  my $error = 0;
  # Check for the termcap package
  if (! -f "/etc/termcap") {
    print "ERROR: Cygwin termcap package must be installed first. Run the Cygwin setup.exe and install the \"termcap\" package\n";
   $error = 1;
  }

  my $stddef_file = `find /usr/lib/gcc -name 'stddef.h' -print -quit`;
  chomp($stddef_file);
  if ($stddef_file eq "") {
    print "ERROR: Cygwin gcc-core package must be installed first. Run the Cygwin setup.exe and install the \"gcc-core\" package\n";
    $error = 1; 
  }
  exit() if $error;

  # Save current dir
  my $curr_dir = `pwd`;
  chomp $curr_dir;

  # Get the first Perl lib directory to place the header files
  $perlib = $INC[0];

  my $in = '/usr/include';
  chdir($in) or die "ERROR: cannot chdir to $in: $!"; 
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib", "_ansi.h", "newlib.h", "stdint.h", "endian.h", "byteswap.h");
#  @conv_inc_headers = ("h2ph", "$in/_ansi4.h", "$in/newlib.h", "$in/stdint.h", "$in/endian.h", "$in/byteswap.h", "$in/sys/ioctl.h", "$in/sys/cdefs.h", "$in/sys/termios.h", "$in/sys/types.h", "$in/sys/_ansi.h", "$in/sys/_types.h", "$in/sys/config.h", "$in/sys/features.h", "$in/sys/sysmacros.h", "$in/sys/lock.h");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?"; 

  $in = '/usr/include/sys';
  if (! -d "$perlib/sys") {
    mkdir("$perlib/sys") or die "ERROR: cannot mkdir $perlib/sys: $!";
  }
  chdir($in) or die "ERROR: cannot chdir to $in: $!";
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib/sys", "ioctl.h", "cdefs.h", "termios.h", "types.h", "_types.h", "config.h", "features.h", "sysmacros.h", "lock.h");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?"; 

  $in = '/usr/include/bits';
  if (! -d "$perlib/bits") {
    mkdir("$perlib/bits") or die "ERROR: cannot mkdir $perlib/bits: $!";
  }
  chdir($in) or die "ERROR: cannot chdir to $in: $!";
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib/bits", "endian.h", "wordsize.h");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?"; 

  open(WORDSIZE_FILE, ">", "wordsize.ph") or die "ERROR: Cannon open wordsize.ph: $!"; 
  print WORDSIZE_FILE "$wordsize_file";
  close WORDSIZE_FILE;

  $in = '/usr/include/machine';
  if (! -d "$perlib/machine") {
    mkdir("$perlib/machine") or die "ERROR: cannot mkdir $perlib/machine: $!";
  }
  chdir($in) or die "ERROR: cannot chdir to $in: $!";
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib/machine", "ieeefp.h", "_types.h", "types.h", "_default_types.h");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?";

  $in = '/usr/include/cygwin';
  if (! -d "$perlib/cygwin") {
    mkdir("$perlib/cygwin") or die "ERROR: cannot mkdir $perlib/cygwin: $!";
  }
  chdir($in) or die "ERROR: cannot chdir to $in: $!";
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib/cygwin", "config.h", "types.h");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?";

  my ($file_name, $dir) = fileparse($stddef_file);
  chdir($dir) or die "ERROR: cannot chdir to $dir: $!";
  @conv_inc_headers = ("h2ph", "-Q", "-d", "$perlib", "$file_name");
  system(@conv_inc_headers) == 0 or die "ERROR: when running \"@conv_inc_headers\": $?";

  
  chdir($curr_dir);

  require 'sys/ioctl.ph'
}

sub audit {
  my $msg = shift;
  return if $is_old_cygwin or $is_new_cygwin or $is_mac;
  $user = $ENV{SUDO_USER};
  $user = (getpwuid($<))[0] if $user eq "";
  $msg =~ s/\n/ /g;
  $msg =~ s/\r/ /g;
  print AUDIT localtime()." - ".$user.":$$ - $msg\n";
}

sub is_ipv4 {
  my $ip = shift;
  return $ip =~ /\./;
}

sub init_regex_IPv6 {
  # This was literally taken from the Perl module Regexp::IPv6 to avoid importing a new module
  # the license seems to allow it
  my $IPv4 = "((25[0-5]|2[0-4][0-9]|[0-1]?[0-9]{1,2})[.](25[0-5]|2[0-4][0-9]|[0-1]?[0-9]{1,2})[.](25[0-5]|2[0-4][0-9]|[0-1]?[0-9]{1,2})[.](25[0-5]|2[0-4][0-9]|[0-1]?[0-9]{1,2}))";
  my $G = "[0-9a-fA-F]{1,4}";

  my @tail = ( ":",
             "(:($G)?|$IPv4)",
             ":($IPv4|$G(:$G)?|)",
             "(:$IPv4|:$G(:$IPv4|(:$G){0,2})|:)",
             "((:$G){0,2}(:$IPv4|(:$G){1,2})|:)",
             "((:$G){0,3}(:$IPv4|(:$G){1,2})|:)",
             "((:$G){0,4}(:$IPv4|(:$G){1,2})|:)" );

  $IPv6_re = $G;
  $IPv6_re = "$G:($IPv6_re|$_)" for @tail;
  $IPv6_re = qq/:(:$G){0,5}((:$G){1,2}|:$IPv4)|$IPv6_re/;
  $IPv6_re =~ s/\(/(?:/g;
}

sub set_start_capture_time {
  # We need to save the current file sizes. Need this info
  # in case the user wants to save all the logs since the beginning
  # of the caputre as we need to save from now on (discard previous log
  # entries the log may have)

  foreach (keys %log_file) {
    my $sb = stat("$trace_dir$log_file{$_}");
    if (-f "$trace_dir$log_file{$_}") {
      $start_capture_file_data{$log_file{$_}}{size} = $sb->size;
    } else {
      $start_capture_file_data{$log_file{$_}}{size} = 0;
    }
  }
#print TMP Dumper(%start_capture_file_data);

  $start_capture_time = time();
}

sub sm_login_handler {
  my ($ssh, $pty, $data) = @_;
  $is_asg = 0;
  my $read;
  eval {
    local $SIG{ALRM} = sub { die "alarm\n" }; # NB: \n required
    alarm 15; # 5 seconds to get the connection and read something (e.g. Password or Challenge
    goto_xy($x, $y+1);
    cursor_visible(0);
    print "                           ".colored("Connecting...","green");
    $read = sysread($pty, $$data, 1024, length $$data);
    alarm 0;
  };
  if ($@) {
    # Timeout after 5 seconds
    die unless $@ eq "alarm\n";   # propagate unexpected errors
    goto_xy($x, $y+1);
    print "                                         ";
    open MASTER_STDERR, "<", $fh_master_stderr or die "Cannot open $fh_master_stderr: $!\n";
    { local $/; $err = <MASTER_STDERR>; };
    # We need the stderr of the master connection to get some more details 
    # of the failure. Here we try to parse the common ones.

    audit("Connection failed:\n$err"); 
    #print TMP $err;
   
    # Public key of the remote changed
    if ($err =~ /Offending key in (.*)/) {
      die "Remote host key different than previously recorded.\nOffending key in $1\n";  
    } elsif ($err eq "") {
      die "Timeout while attempting to connect\n";
    }
    die $err;
  }
  goto_xy($x, $y+1);
  print "                                         ";

  # if we are here, at least we got something from the remote machine (e.g. pass prompt or ASG challenge)

  # display the cursor and change to normal keyboard mode
  set_keyboard(0);
  cursor_visible(1);

  if ($read) {
    # print "buffer: >$$data<\n";
    my $lin_num = 0;
    for (split /\n/, $$data) {
      chop();
      next if $_ eq ""; # skip empty lines
      goto_xy($x, ($y+$lin_num++)-1);
      print $_;
    } 
    $is_asg = 1 if $$data =~ /Challenge:/; 
#print TMP "got from remote:\n";
#print TMP $$data;
    if ($$data =~ s/.*://s) { # Got the Password: or Challenge: prompt
      set_keyboard(1);  # remove echo to hide the password 
      print " ";
      my $passwd = <STDIN>;
      chomp($passwd);
      print $pty "$passwd\n";
      cursor_visible(0); # hide the cursor
      goto_xy($x, $y+1);
      print "                           ".colored("Connecting...","green");
      return 1;
    }
  }
  return 0;
}

sub connect_to_sm {
  my $name = shift(@_);
  if ($min_col eq "80") {
    $w = 71;
  } else {
    $w = 87;
  }
  my $h = 7;
  ($x, $y);

  create_box($w,$h);
  $x = ($max_col - $w-2)/2 + 2;
  $y = $dg_top_margin + ($max_row-$dg_top_margin-1 - $h-2)/2 + 1;

  my $title = "SSH connection to ".colored("$name","green");
  goto_xy($x+($w-length_no_color($title))/2, $y++);
  print "$title";
  goto_xy($x, $y++);

  print "login as: ";
  # display the cursor and change to normal keyboard mode
  set_keyboard(0);
  cursor_visible(1);

  my $user = <STDIN>;
  chop($user);
  goto_xy($x, $y++);
  $fh_master_stderr = File::Temp->new();
  $ssh{$name}{ssh} = Net::OpenSSH->new(host => $core_sms{$name}{ip}, user => "$user",
                            master_opts => [-o => 'NumberOfPasswordPrompts=1',
                                            -o => 'PreferredAuthentications=keyboard-interactive,password',
                                            -o => 'StrictHostKeyChecking=no',
                                            -o => 'Compression=yes',
                                            -R => '10514:127.0.0.1:55514'],
                            login_handler => \&sm_login_handler,
                            timeout => 60,
#                            master_stdout_discard => 0, master_stderr_discard => 0, timeout => 60,
                            master_stdout_discard => 0, master_stderr_fh => $fh_master_stderr,
                            );

  goto_xy($x, $y);
  print "                                         ";

  set_keyboard(1);
  cursor_visible(0);
  if ($ssh{$name}{ssh}->error) {
#print TMP $ssh{$name}{ssh}->error;
    my $error = $ssh{$name}{ssh}->error;
    $error =~ s/unable to establish master SSH connection: //g; 
    $error =~ s/custom login handler failed: //g;
    $error =~ s/password authentication failed/ASG challenge failed or account locked/g if $is_asg;
    $error = "ERROR: $error";
    for (split /\n/, $error) {
      chomp();
      goto_xy($x, $y++);
      print colored("$_", "red"); 
    } 
    my $msg = "Press ENTER to continue";
    goto_xy($x+($w-length($msg))/2, $y++);
    print "$msg";
    <STDIN>;
    return 0;
  }
  return 1;

}


sub get_core_sms {
    # Get the Asset IP and name of all the core SMs
    my $sql = "SELECT se.name,ai.managementaccesspointhostname,se.fqdnoripaddr FROM sipentity se,asminstance ai WHERE se.id=ai.sipentity_id and ai.sm_type='SM';";
    $result = `export PGPASSWORD=postgres; $psql_cmd asm -U postgres -c "$sql" -t -P format=unaligned 2>&1`;
    if ($result =~ /: FATAL:  password authentication failed for user |sh: $psql_cmd: command not found/) {
      audit("Could not get remote core SMs: $result");
      return 1;
    } else {
      foreach (split(/\n/,$result)) {
        if (/^(.*)\|(\d+\.\d+\.\d+\.\d+)\|(.*)/) {
          if (!exists($core_sms{$1})) {
            $core_sms{$1} = &share({});
          }
          $core_sms{$1}{ip} = $2;
          $core_sms{$1}{sm100_ip} = $3;
          if ($asm_ip eq $2) {
            $core_sms{$1}{local} = 1;
          } else {
            $core_sms{$1}{local} = 0;
          }

          # Prepopulate the $name_ip  we can resolve the SMs IPs
          $name_ip{$2} = "[WAS]".$1;
          $name_ip{$3} = "$1";  
        }
      }
    }
    return 0;
}

sub set_live_offset {
  # Calculate the time difference between the two SMs
  $sm_name = $_[0];
  # Get remote time zone
  my $local_time_zone = `date +%z`;
  
  my $local_time_before = `date +%s.%N`; chomp($local_time_before);
  if (!(send_command($sm_name,"timestamp",$resp) && $resp ne "")) { #  Failed to get the remote date and time
    audit("Failed to get the remote date and time from $sm_name: $resp");
    undef($core_sms{$sm_name}{ssh});
    undef($ssh{$sm_name}{ssh});
  } else {
    my $local_time_after = `date +%s.%N`; chomp($local_time_after);
    my ($remote_timestamp, $remote_time_zone) = split(/\:/,$resp);
    my $offset = (($local_time_after + $local_time_before)/2 - $remote_timestamp) + (3600*($local_time_zone - $remote_time_zone)/100);
    $core_sms{$sm_name}{offset} = $offset;
#print TMP "local_time_before: $local_time_before     local_time_after: $local_time_after    remote: $resp    offset: $offset\n";
    my $remote_file_name = $trace_dir."remote_sip_".$core_sms{$sm_name}{hostname}.".log";
    $result = `echo "traceSM offset: $sm_name->$offset" >> $remote_file_name`;
    if ($result ne '') {
      die_message("ERROR: failed to echo offset in $remote_file_name: $!\n")
    }
  }
}

sub start_remote_sip_logrotate {
  # Create a logrotate config file to rotate the remote syslog output.
  $logrotate_config = <<"END_LOGROTATE";
/var/log/Avaya/trace/remote_sip_*.log {
        nodateext
        rotate 10
        missingok
        size=20M
        copytruncate
}
END_LOGROTATE

  open(REMSIPLOGROTATE, ">", "$trace_dir/traceSM_remote_sip_logrotate.conf") or die_message("ERROR: Can't create remote sip logrotate config file $trace_dir/traceSM_remote_sip_logrotate.conf: $!\n");
  print REMSIPLOGROTATE $logrotate_config or die_message("ERROR: Can't write remote sip logrotate config file $trace_dir/traceSM_remote_sip_logrotate.conf: $!\n");
  close REMSIPLOGROTATE;
	
  # add a crontab job to run logrotate every minute.
  open (CRON, "| crontab -") or die_message("ERROR: Can't open crontab: $!\n");
  my $cron = qx(crontab -l);
  print CRON "$cron\n* * * * * /usr/sbin/logrotate /var/log/Avaya/trace/traceSM_remote_sip_logrotate.conf\n";
  close CRON;
  
  # run chmod to make sure 600 permissions
  chmod(0600, "/var/log/Avaya/trace/traceSM_remote_sip_logrotate.conf") or die_message("ERROR: Can't set permissions on /var/log/Avaya/trace/traceSM_remote_sip_logrotate.conf: $!\n");
}

sub stop_remote_sip_logrotate {
  # Remove the crontab entry
  open (CRON, "| crontab -") or  die_message("ERROR: Can't open crontab: $!\n");
  my $cron = qx(crontab -l);
  $cron =~ s!\n\* \* \* \* \* /usr/sbin/logrotate /var/log/Avaya/trace/traceSM_remote_sip_logrotate\.conf\n!!g;
  print CRON $cron;
  close CRON;
}

sub start_sip_remote_capture {

  # First configure the local rsyslog to listen on TCP 55514 to receive
  # the sylsog traffic from the remote SM via the SSH tunnels
  start_rsyslog_capture_client();
  start_remote_sip_logrotate();
  
  # Set local hostname for remote hidden lock file
  $hostname = `hostname -s`;chomp($hostname);

  # SSH connect to the remote SMs if needed, and then start the capture.
  foreach my $sm_name (sort keys %core_sms) {
    next if $core_sms{$sm_name}{local} or !$core_sms{$sm_name}{capture};

    # We SSH connect only once to the remote SM, and then we reuse the connection to start/stop the capture
    if (! $ssh{$sm_name}{ssh}) {
      if (connect_to_sm($sm_name)) {
        # Now that we have the SSH master connection up, we will connect to the traceSM "server"
        # so we can send commands (e.g. start/stop capture)
        ($ssh{$sm_name}{in}, $ssh{$sm_name}{out}, $ssh{$sm_name}{err}, $ssh{$sm_name}{pid}) = $ssh{$sm_name}{ssh}->open3("sudo traceSM -server");


        # As we just connected, we should get the prompt back
        if (!wait_for_response_and_prompt($sm_name,$ignore)) {
          # Got an error while wating for the traceSM remote prompt
          audit("Connected to the remote SM but failed to connect to the traceSM server");
          $core_sms{$sm_name}{capture} = 0;
          undef($core_sms{$sm_name}{ssh});
          undef($ssh{$sm_name}{ssh});
          next;
        }
        if (send_command($sm_name,"version",$resp) && $resp ne "" && $resp ne "Command not found") {
          $core_sms{$sm_name}{version} = $resp;
          # TODO update for IPv6 if necessary (aka if SSH is done over IPv6)
          if (send_command($sm_name,"hostname-".$asm_ip."-".$hostname,$resp) && $resp ne "" && $resp ne "Command not found") {
            if ($resp =~ /^NOK-(.*)/){
              # Not OK, remote ASM already connected
              my $remote_hostname = $1;
              audit($sm_name." rejected remote traceSM, ".$remote_hostname." is already connected.\n");
              $core_sms{$sm_name}{capture} = 0;
              display_remote_trace_already_running($remote_hostname,$x,$y);
              undef($core_sms{$sm_name}{ssh});
              undef($ssh{$sm_name}{ssh});
              next;
            } else {
              # Assume response is good by this point
              $core_sms{$sm_name}{hostname} = $resp;
            }
          } else {
            audit("Error getting the remote hostname from $sm_name");
            $core_sms{$sm_name}{capture} = 0;
            undef($core_sms{$sm_name}{ssh});
            undef($ssh{$sm_name}{ssh});
            next;
          }
        } else {
          audit("Error getting the traceSM version from $sm_name");
          $core_sms{$sm_name}{capture} = 0;
          undef($core_sms{$sm_name}{ssh});
          undef($ssh{$sm_name}{ssh});
          next;
        }
        audit("Connected to $sm_name $core_sms{$sm_name}{ip}");
        $core_sms{$sm_name}{ssh} = 1;
  
        # Now that we are connected to the remote SM, we will start a new thread to process 
        # the SIP mesages form that remote SM that are stored in a local file under
        # /var/log/Avaya/trace/remote_sip_<REMOTE_SM_HOSTNAME>.log 
        my $remote_file_name = $trace_dir."remote_sip_".$core_sms{$sm_name}{hostname}.".log";
        
        if (!-f "$remote_file_name") {
          # Create the file if does not exist
          $result = `touch $remote_file_name;chown root:susers $remote_file_name;chmod 640 $remote_file_name`;
        }

        open($ssh{$sm_name}{filehandle}, "$remote_file_name") || die_message("Can't open remote capture $remote_file_name file.\nERROR: $!\n");
        seek($ssh{$sm_name}{filehandle}, 0, SEEK_END); # Go to the end of the file
        threads->create(\&process_asset_file,$ssh{$sm_name}{filehandle},$remote_file_name,"$sm_name");
 
      } else {
        audit("Failed to connect to $sm_name $core_sms{$sm_name}{ip}");
        undef($core_sms{$sm_name}{ssh});
        undef($ssh{$sm_name}{ssh});
      }
    }

    # Now start the capture in the remote SM
    if ($ssh{$sm_name}{ssh}) {
      # First check how busy it is
      if (send_command($sm_name,"get_messages_per_second",$resp) && $resp ne "" && $resp ne "Command not found") {
        $core_sms{$sm_name}{mps} = $resp;
      } else {
        audit("Error getting the remote messages per second from $sm_name");
      }
      set_live_offset($sm_name);
      if (!(send_command($sm_name,"start_sip_remote",$resp) && $resp eq "OK")) { #  Failed to start the remote SIP capture
        audit("Failed to start the remote SIP capture on $sm_name: $resp");
        $core_sms{$sm_name}{capture} = 0;
        undef($core_sms{$sm_name}{ssh});
        undef($ssh{$sm_name}{ssh});
      } else {
        # If we are here we finally connected SSH to the remote SM, and successfully started
        # the SIP capture on the remote SM.
        # To avoid displaying duplicate SIP messages (captured in two SMs), need to
        # keep track which SM we are capturing.
        # The %map_sms key is the SM name, and the elements are the SM100 IPs that
        # that SM should not display messages as it is already covered by anothe SM.
        # The "local" SM will alys have priority, so we see if it is capturing first.
        # First get all the SMs that are already capturing and add their SM100 IP 
        my @sm100_already_seen = ();
        foreach my $sm (sort keys %map_sms) {
          if ($sm eq "local") {
            push(@sm100_already_seen, $sm100_ip);
          } else {
            push(@sm100_already_seen, $core_sms{$sm}{sm100_ip}); 
          } 
        }
        # Now add this new SM to the map (%map_sms) and add all
        # the SM100 IPs of the other SMs
        $map_sms{$sm_name} = &share({});
        foreach (@sm100_already_seen) {
          $map_sms{$sm_name}{$_} = 1;
        }
      }
    }
  }
  
  display_mps_suggestion($x, $y);
}

sub stop_sip_remote_capture {

  stop_rsyslog_capture_client();
  stop_remote_sip_logrotate();

  foreach my $sm_name (sort keys %core_sms) {
    next if $core_sms{$sm_name}{local} or !$core_sms{$sm_name}{capture};
    $core_sms{$sm_name}{capture} = 0;

    if ($ssh{$sm_name}{ssh}) {
      send_command($sm_name,"stop_sip_remote-".$hostname,$resp);
    }
  }
}

sub wait_for_response_and_prompt {
  my ($sm, $resp) = @_;

  my $data = "";

#  # First check for errors
#  eval {
#    local $SIG{ALRM} = sub { die "alarm\n" }; # NB: \n required
#    alarm 2; # 2 seconds to get the prompt back
#    $read = sysread($ssh{$sm}{err}, $data, 1024, length $data);
#    alarm 0;
#  };
#  if ($@) {
#    # Timeout after 2 seconds
#    die_message("Error waiting the remote prompt") unless $@ eq "alarm\n";   # propagate unexpected errors
#print TMP "Timeout waiting for ERROR (this is actually good as we do not want errors from remote)\n";
#  } elsif ($read) { # Got some error (stderr) from the remote
#print TMP "00000000000 Read $read from error from remote: $data\n";
#    undef($core_sms{$sm}{ssh});
#    undef($ssh{$sm}{ssh});
#    return 0;
#  }
#
  # Now read from the remote stdout
  $data = "";
  while (1) {
    # wait for the response and prompt back
    eval {
      local $SIG{ALRM} = sub { die "alarm\n" }; # NB: \n required
      alarm 20; # 5 seconds to get the prompt back
      $read = sysread($ssh{$sm}{out}, $data, 1024, length $data);
#      $read = sysread($ssh{$sm}{err}, $data, 1024, length $data);
      alarm 0;
    };
    if ($@) {
      # Timeout after 5 seconds
      die_message("Error waiting the remote prompt") unless $@ eq "alarm\n";   # propagate unexpected errors
#print TMP "Timeout after 5 seconds\n";

      audit("Timeout waiting for the prompt from remote SM '$sm'.");
      undef($core_sms{$sm}{ssh});
      undef($ssh{$sm}{ssh});
      return 0;
    }

#print TMP "Read $read and Got something from remote: $data\n";
#sleep(1);
    if (!$read) {
      # Check for errors
      $data = "";
      eval {
        local $SIG{ALRM} = sub { die "alarm\n" }; # NB: \n required
        alarm 5; # 2 seconds to get the prompt back
        $read = sysread($ssh{$sm}{err}, $data, 1024, length $data);
        alarm 0;
      };
      if ($@) {
        # Timeout after 2 seconds
        die_message("Error waiting the remote prompt") unless $@ eq "alarm\n";   # propagate unexpected errors
#print TMP "Timeout waiting for ERROR (this is actually good as we do not want errors from remote)\n";
      } elsif ($read) { # Got some error (stderr) from the remote
#print TMP "Read $read from error from remote: $data\n";
        audit("Remote error: $data");
        undef($core_sms{$sm}{ssh});
        undef($ssh{$sm}{ssh});
        return 0;
      }

      return 0;
    }
    if ($data =~ s/^<\S+ - traceSM> $//m) {
      # Got the remote prompt
      chomp($data);
#print TMP "Got remote prompt and response: $data\n";

      $_[1] = $data; # If there is a response should be before the proompt
      return 1; # return success
    }
    if ($data eq "") {
      return 0;
#print TMP "Got nothing back, so lets stop\n";
    }
#print TMP "Should be more data comming\n";
  } 

#print TMP "Mmm, got something that does not look liek the prompt\n";

  # we recevice something that is not the prompt. Do not drop the connection,
  # but state it in the audit log and return unsuccess
  audit("No prompt received from remote SM '$sm'.");
  return 0;
 
}

sub send_command {
  my ($sm, $cmd, $resp) = @_;

  return 0 if not $ssh{$sm}{ssh}; # Make sure the SSH connection is still there

  my $in = $ssh{$sm}{in};
  my $data;

  # Send the command to the remote SM
#print TMP "Sending command $cmd to remote\n";
  print $in $cmd."\n"; 
 
  # get the response and wait for the prompt back
  if (wait_for_response_and_prompt($sm, $resp)) {
    $_[2] = $resp;
    return 1; # return success
  };
  return 0; # unsuccess
}


sub run_server {
  my $hostname = `hostname -s`; chomp($hostname);
  my $prompt = "<$hostname - traceSM> ";
#print TMP "\t\t\t\tSomeone connected remotly\n";
#print TMP "\t\t\t\tSending first prompt\n";
  print $prompt;
  $| = 1; # flush the buffer to send the prompt

  do {
    $cmd = <STDIN>;
    chomp($cmd);
    audit("Got command from remote: $cmd\n");
#print TMP "\t\t\t\tGot command from remote: $cmd\n";
    if ($cmd =~ /version/i) {
      # Send the traceSM version. This maybe used in the future to add more commands and to maintain
      # backward compatibility
      audit("local version requested\n");
      print "traceSM $version\n";
    } elsif ($cmd =~ /hostname-(.*)/i) {
      # extract remote_hostname
      $remote_hostname = $1;
      audit("$1 is requesting local hostname\n");
      # First check for existing connection from other ASM
      $remote_running = `cat /var/log/Avaya/trace/.remote_capture 2>&1 | grep -v "No such file or directory"`;
      #my $response = `$get_asset_trace`;
      if ($remote_running ne "") {
        audit("Remote traceSM already running\n");
        print "NOK-".$remote_running."\n";
      #} elsif ($response =~ /trace_enable = 1/s) {
      } elsif (is_asset_capture()) {
        audit("Local traceSM already running\n");
        print "NOK-locally\n";        
      } else {
        # Set local hidden file for which ASM has remotely started capture
        `echo $remote_hostname > /var/log/Avaya/trace/.remote_capture`;

        # Send the hosntame. This is then embedded in the syslog messages and used to
        # separate each SM logs in its own file
        my $hostname = `hostname -s`;
        print "$hostname";
      }
    } elsif ($cmd =~ /start_sip_remote/i) {
      audit("Remotely starting SIP tracing\n");
      if (start_rsyslog_capture_server()) {
        print "NOK\n";
      } else {
        print "OK\n";
      }
    } elsif ($cmd =~ /stop_sip_remote-(.*)/i) {
      audit("Remotely stopping SIP tracing\n");
      if (stop_rsyslog_capture_server($1)) {
        print "NOK\n";
      } else {
        print "OK\n";
      }
    } elsif ($cmd =~ /timestamp/i) {
      my $timestamp = `date +%s.%N:%z`;
      print "$timestamp";
    } elsif ($cmd =~ /get_messages_per_second/i) {
      printf "%.1f\n", get_messages_per_second();
    } elsif ($cmd =~ /disconnect/i) {
      audit("Remove .remote_capture lock - graceful disconnected");
      $resp = `rm -rf /var/log/Avaya/trace/.remote_capture`;
      print "OK\n";
    }elsif ($cmd !~ /^\s*$/) {
      print "Command not found\n";
    }
    print $prompt;
    $| = 1; # flush the buffer to send the response
  } until $cmd =~ /quit/i or $cmd eq ""; # TODO: I've added the empty command here otherwise it looped and left this spinning when the client quits
  
  # Make sure we stop the capture when server mode quits
  stop_rsyslog_capture_server();
  audit("---------------- traceSM server mode close ----------------");
  exit;
}

# This makes the rsyslog config changes so the SIP traces are sent
# to the localhost port 10514 instead of the tracer_asset.log
# At this point there should already be a SSH tunnel that will forward
# syslog SIP messages from the local 10514 to the remote SM where traceSM 
# is running
sub start_rsyslog_capture_server {
  # Check for local trace already running
  my $response = `$get_asset_trace`;
  if ($response =~ /trace_enable = 1/s) {
    return 1;
  }

  
  # for sanity check, remove the rsyslog config file in case it is already there. Under normal
  # conditions the file should not be there as we do not support leaving the remote cature funtionality running in the background
  `rm -rf /etc/rsyslog.d/traceSM_server.conf`;

  # Create the server config file
  my $rsyslog_server = <<'END_RSYSLOG';
# DO NOT MANUALLY MODIFY THIS FILE
# Created by traceSM.
# This is the "server" side of the remote SM capture feature.
# This means someone on a different SM is running traceSM
# and capturing from this remote SM. This SM will send SIP
# messages over rsyslog to the localhost and port 10514.
# There should be already an SSH tunnel created from the other SM
# so any TCP message that this SM send to localhost:10514 is 
# tunneled over the other SM. 
local2.*          @@(z1)127.0.0.1:10514
END_RSYSLOG

  open(RSYSLOGSERVER, ">", "/etc/rsyslog.d/traceSM_server.conf") or return 1;
  print RSYSLOGSERVER $rsyslog_server or return 1;
  close RSYSLOGSERVER;

  # Comment out the asset default syslog file to not log into tracer_asset.log
  if (-e "/etc/rsyslog.d/asset") { # 7.0 and older uses asset
    `sed -i "s/^local2/#local2/" /etc/rsyslog.d/asset`;
  } else { # 7.1 and newer uses asset.conf
    `sed -i "s/^local2/#local2/" /etc/rsyslog.d/asset.conf`;
  }
  
  # For 7.1 and later, open SELinux so rsyslog can use port 10514
  if (-x "/sbin/semanage") {
    `logger "traceSM added port 10514 to syslogd permissions in SELinux"`;
    system("semanage port -a -t syslogd_port_t -p tcp 10514");
  }
   
  # Log in the /var/log/messages that traceSM will restart rsyslog to avoid confusion when troubleshooting server issues
  `logger "traceSM is restarting rsyslog to start the remote SIP capture"`;
  # restart rsyslog service for the changes to take effect (unfortunately reload does not do it)
  restart_rsyslog();

  # Start the SIP traces
  start_asset_capture();

  return 0;
}

sub display_remote_trace_already_running {
  my $remote_hostname = shift;
  $x = shift;
  $y = shift;
  $w = 44 + length($remote_hostname);
  $h = 2;
  create_box($w,$h);
  $x = ($max_col - $w-2)/2 + 2;
  $y = ($dg_top_margin + ($max_row-$dg_top_margin-1 - $h-2)/2 + 1);
  goto_xy($x,$y);
  print "Remote ASM (".$remote_hostname.") is already running a capture";
  goto_xy($x,++$y);
  my $s = (" " x int(length($remote_hostname)/2))."       press any button to continue";
  print colored($s,"red");
  
  getc(STDIN);
  return 0;
}

sub stop_rsyslog_capture_server {
  $asm_host_requesting = @_[0];
  # Skip if traceSM_server not set
  return if not is_remote_capture_server();

  # Skip if original connection still alive
  $orig_r_info = `head -n1 /var/log/Avaya/trace/.remote_capture`;
  $orig_r_info =~ /(\d+\.\d+\.\d+\.\d+)-(.*)/;
  $orig_r_ip = $1;
  $orig_r_host = $2;
  if ("$asm_host_requesting" ne "$orig_r_host") {
    # add pause to let socket disconnect
    select(undef, undef, undef, 5.0);
    $r_pid = `lsof -Pn | grep 127.0.0.1:10514 | grep LISTEN | awk '{print \$2}'`;chomp($r_pid);
    $orig_still_running = int(`lsof -Pn | grep $r_pid | grep TCP | grep ":22->$orig_r_ip" | grep -c EST`);
    return if $orig_still_running;
    # remove hidden file.  At this point the orig connection is gone and this was not gracefully prompted by orig ASM
    audit("Remove .remote_capture lock - original connection is gone");
    `rm -rf /var/log/Avaya/trace/.remote_capture`;
  }
  
  audit("Remotely stopping traceSM, requested by $asm_host_requesting\n");
  # Remove the rsyslog config file
  `rm -rf /etc/rsyslog.d/traceSM_server.conf`;

  # uncomment the asset default syslog file to allow logging into tracer_asset.log
  if (-e "/etc/rsyslog.d/asset") { # 7.0 and older uses asset
    `sed -i "s/^#local2/local2/" /etc/rsyslog.d/asset`;
  } else { # 7.1 and newer uses asset.conf
    `sed -i "s/^#local2/local2/" /etc/rsyslog.d/asset.conf`;
  }

  # Stop the SIP traces
  stop_asset_capture();

  # For 7.1 and later, close SELinux back to default
  if (-x "/sbin/semanage") {
    `logger "traceSM removed port 10514 to syslogd permissions in SELinux"`;
    system("semanage port -d -t syslogd_port_t -p tcp 10514");
  }

  # Log in the /var/log/messages that traceSM will restart rsyslog to avoid confusion when troubleshooting server issues
  `logger "traceSM is restarting rsyslog to stop the remote SIP capture"`;
  # restart rsyslog service for the changes to take effect (unfortunately reload does not do it)
  restart_rsyslog();

  return 0;
}

sub is_remote_capture_server {
  if (-f "/etc/rsyslog.d/traceSM_server.conf") {
    return 1;
  }
  return 0;
}

# This makes the rsyslog config changes so the SIP traces comming
# thru the SSH tunnel from the remote SMs get to port 55514 and 
# then rsyslog dump them in local files
sub start_rsyslog_capture_client {
  # for sanity check, remove the rsyslog config file in case it is already there. 
  `rm -rf /etc/rsyslog.d/traceSM_client.conf`;

  # Create the client config file
  my $rsyslog_client = <<'END_RSYSLOG';
# DO NOT MANUALLY MODIFY THIS FILE
# Created by traceSM.
# This is the "client" side of the remote SM capture feature.
# SIP traces comming thru the SSH tunnel from the remote SMs are stored locally

# Provides TCP syslog reception
$ModLoad imtcp

$template HostnameInFilename,"/var/log/Avaya/trace/remote_sip_%HOSTNAME%.log"
#$template HostnameInFilename,"/var/log/Avaya/trace/remote_sip_2.log"

$RuleSet remote
#local2.*           -/var/log/Avaya/trace/remote_sip.log
local2.*           ?HostnameInFilename
$InputTCPServerBindRuleset remote
#$InputTCPSupportOctetCountedFraming off
#$InputTCPServerDisableLFDelimiter on
$InputTCPServerRun 55514

# switch back to the default ruleset:
$RuleSet RSYSLOG_DefaultRuleset
END_RSYSLOG

  open(RSYSLOGSERVER, ">", "/etc/rsyslog.d/traceSM_client.conf") or die_message("ERROR: Can't create rsyslog config client file /etc/rsyslog.d/traceSM_client.conf: $!\n");
  print RSYSLOGSERVER $rsyslog_client or die_message("ERROR: Can't write rsyslog config client file /etc/rsyslog.d/traceSM_client.conf: $!\n");
  close RSYSLOGSERVER;
  
  # For 7.1 and later, open SELinux so rsyslog can use port 55514
  if (-x "/sbin/semanage") {
    `logger "traceSM added port 55514 to syslogd permissions in SELinux"`;
    system("semanage port -a -t syslogd_port_t -p tcp 55514");
  }

  # Log in the /var/log/messages that traceSM will restart rsyslog to avoid confusion when troubleshooting server issues
  `logger "traceSM is restarting rsyslog to start the remote SIP capture"`;
  # restart rsyslog service for the changes to take effect (unfortunately reload does not do it)
  restart_rsyslog();

  return 0;
}

sub stop_rsyslog_capture_client {

  return if not is_remote_capture_client();

  # Remove the rsyslog config file
  `rm -rf /etc/rsyslog.d/traceSM_client.conf`;

  # For 7.1 and later, close SELinux back to defaul
  if (-x "/sbin/semanage") {
    `logger "traceSM added port 10514 to syslogd permissions in SELinux"`;
    system("semanage port -d -t syslogd_port_t -p tcp 55514");
  }

  # Log in the /var/log/messages that traceSM will restart rsyslog to avoid confusion when troubleshooting server issues
  `logger "traceSM is restarting rsyslog to stop the remote SIP capture"`;
  # restart rsyslog service for the changes to take effect (unfortunately reload does not do it)
  restart_rsyslog();

  return 0;
}

sub is_remote_capture_client {
  if (-f "/etc/rsyslog.d/traceSM_client.conf") {
    return 1;
  }
  return 0;
}

# Restart the rsyslog process using the watchd commands
sub restart_rsyslog {
  # Do not use "service rsyslog restart" as that conflicts with watchdog as it monitors it
  # Also do not use the "restart" command as older 6.3 SMs do not support them
  # This method only works through 7.0.
  if (-x "/usr/bin/systemctl") {
    `systemctl restart rsyslog.service`;
  } else {
    `/opt/Avaya/bin/stop -s rsyslog -Sfn`;
    `/opt/Avaya/bin/start -s rsyslog`;
  }
}
