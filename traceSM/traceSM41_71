# Init the display RTP to not show the simulated RTP
if ($display_rtp) {
  $display_rtp = 1;
} else {
  $display_rtp = 0;
}

$prev_display_mode = "diagram";
$display_mode = "opening file";
$processing_initial_queue = 1;
if ($is_real_time) {
  if ($is_old_cygwin or $is_new_cygwin or $is_mac) {
    end_screen();
    print "ERROR: Running under ".($is_mac ? "MAC" : "Cygwin").". Please specify the file to open.\n";
    exit;
  }
  real_time_capture();
} else {
  open_provided_capture_files();
}

audit("---------------- traceSM close ----------------");
exit;
##################  End Main  ##############################


sub real_time_capture {

  # Set the SM eth0 and eth1 (asset) IPs
  set_sm_ips_real_time();

  # Get the list of Core SMs
  get_core_sms();


  # If the user did not specify any file to decode, then decode the asm.log and tracer_asset.log
  get_logs();

  # Process the file(s)
  $tail_log = 1;
  $max_exceeded = 0;
  $display_asm = -1;
  my $asm_file = "";
  my $asset_file = "";

  foreach $f (@asm_files) {
    open(ASM_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    seek(ASM_FILE, 0, SEEK_END);
    $asm_file = $f;
  }

  foreach $f (@asset_files) {
    open(ASSET_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    seek(ASSET_FILE, 0, SEEK_END);
    $asset_file = $f;
  }

  foreach $f (@ppm_files) {
    open(PPM_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    seek(PPM_FILE, 0, SEEK_END);
    $ppm_file = $f;
  }

  foreach $f (@tls_files) {
    open(TLS_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    seek(TLS_FILE, 0, SEEK_END);
    $tls_file = $f;
  }
  # Run a 'tail -f' on asm.log and tracer_asset.log to capture live traffic
  threads->create(\&process_asm_file,\*ASM_FILE,$asm_file);
  threads->create(\&process_asset_file,\*ASSET_FILE,$asset_file,"local");
  threads->create(\&process_ppm_file,\*PPM_FILE,$ppm_file);
  threads->create(\&process_tls_file,\*TLS_FILE,$tls_file);

  if (is_capture()) {
    change_mode("start",$display_mode);
    audit("Already capturing: ".(is_asset_capture() ? "SIP " : "").(is_ppm_capture() ? "PPM " : "").(is_sm_capture() ? "CallP " : "").(is_tls_capture() ? "TLS " : "")); 
  } else {
    change_mode("stop",$display_mode);
  }

  dg_init_positions("bottom");
  cl_init_positions("bottom");
  dg_paint_all();

  # Start the process queu thread
  threads->create(\&process_queue);

  # Start the keyboard loop to process keys
  keyboard_loop();
}

sub open_provided_capture_files {
  # Process the file(s)
  change_mode("opening_file",$display_mode);
  $tail_log = 0;
  $max_exceeded = 0;
  $display_asm = -1;

  # Set the SM eth0 and eth1 (asset) IPs using the provided files
  #set_sm_ips_off_line();

  # ASM files. Reorder the files to start processing the oldest file first
  @asm_files = sort {-M $b <=> -M $a} @asm_files;
  foreach $f (@asm_files) {
    dos_2_unix($f);
    open(ASM_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    process_asm_file(\*ASM_FILE,$f);
    close(ASM_FILE);
  }

  ## Asset files. Reorder the files to start processing the oldest file first
  @asset_files = sort {-M $b <=> -M $a} @asset_files;
  # Asset files. Reorder so local is before remote_sip*.
  my @asset_files_remote = ();
  my @asset_files_sorted = ();
  foreach $f (@asset_files) {
    if ($f =~ /remote_sip_(.*)\.log/) {
      push(@asset_files_remote, $f);
    } else {
      push(@asset_files_sorted, $f);
    }
  }
  foreach $f (@asset_files_remote){
    push(@asset_files_sorted, $f);
  }
  
  foreach $f (@asset_files_sorted) {
    dos_2_unix($f);
    open(ASSET_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    # based on filename, make "local" or sm_name
    if ($f =~ /remote_sip_(.*)\.log/) {
      $sm_name = $1;
      # create core_sms hash and share if it doesn't yet exist
      # based off of file name
      if (!exists($core_sms{$sm_name})) {
        $core_sms{$sm_name} = &share({});
      }
      # set the remote ASM offset found in the remote_sip_* file
      $latest_offset = `grep "traceSM offset:" "$f" | tail -n1 | awk -F'>' '{print \$2}'`;
      if ($latest_offset ne '') {
        $core_sms{$sm_name}{offset} = $latest_offset;
      }
      
      # extract and set the remote ASM SM100 and WAS IP address into the core_sms hash from above
      set_sms_ips_off_line($sm_name);
      
      # set already seen hash
      set_already_seen($sm_name);
      
      # and finally process the file
      process_asset_file(\*ASSET_FILE,$f,"$sm_name");
    } else {
      # same as above, but assume everything is local
      set_sms_ips_off_line("local");
      set_already_seen("local");
      
      process_asset_file(\*ASSET_FILE,$f,"local");
    }
    close(ASSET_FILE);
  }

  # OneX Communicator files. Reorder the files to start processing the oldest file first
  @onexc_files = sort {-M $b <=> -M $a} @onexc_files;
  foreach $f (@onexc_files) {
    dos_2_unix($f);
    open(ONEXC_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    process_onexc_file(\*ONEXC_FILE,$f);
    close(ONEXC_FILE);
  }

  # PPM files. Reorder the files to start processing the oldest file first
  @ppm_files = sort {-M $b <=> -M $a} @ppm_files;
  foreach $f (@ppm_files) {
    dos_2_unix($f);
    open(PPM_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    process_ppm_file(\*PPM_FILE,$f);
    close(PPM_FILE);
  }

  # TLS files. Reorder the files to start processing the oldest file first
  @tls_files = sort {-M $b <=> -M $a} @tls_files;
  foreach $f (@tls_files) {
    dos_2_unix($f);
    open(TLS_FILE, "$f") || die_message("Can't open $f file.\nERROR: $!\n");
    set_tls_ips_off_line();
    process_tls_file(\*TLS_FILE,$f);
    close(TLS_FILE);
  }

  # Create the GSI filter
  $gsi_call_id = "";
  create_gsi_call_id_filter_from_regexp($global_session_id) if ($global_session_id);

  change_mode("file","diagram");
  process_queue();

  set_title();

  dg_init_positions("top");
  cl_init_positions("top");
  dg_paint_all();

  # Start the keyboard loop to process keys
  keyboard_loop();
}

sub dos_2_unix {
  # Check if the file is unix format using bash file command
  # unix is either (CRLF and LF) or nothing, dos is only CRLF
  $dosfile = `file @_ | grep " CRLF" | grep -cv " LF"`;
  chomp($dosfile);
  if ($dosfile) {
    @dos2unix = ("/usr/bin/dos2unix", "@_");
    system(@dos2unix);
  }
}

sub set_sms_ips_off_line {
  $sm_name = @_[0];
  chomp($sm_name);
  if ($sm_name eq "local")  {
    # Attempt to get info from file metadata first, if that fails, try and pull from raw file
  
    # Get Asset IP
    $sm100_ip = `grep \"### traceSM local_sm100_ipv4\" "$f" | cut -d: -f2-`;
    if ($sm100_ip eq "") {
      $ipv4 = `grep -P \"(egress|ingress): { L\\d+\\.\\d+\\.\\d+\\.\\d+:\" "$f" -m1`;
      if ($ipv4 =~ /L(\d+\.\d+\.\d+\.\d+)/) {
        $sm100_ip = $1;
      }      
    }


    # Get Asset IPv6
    $sm100_ipv6 = `grep \"### traceSM local_sm100_ipv6\" "$f" | cut -d: -f2-`;
    if ($sm100_ipv6 eq "") {
      $ipv6 = `grep -P \"(egress|ingress): { L\\[\[^\\]\]+\" "$f" -m1`;
      if ($ipv6 =~ /L\[([^\]]+)\]/) {
        $sm100_ipv6 = $1;
      }
    }

    # Get SIP container IP
    $asm_ip = `grep \"### traceSM local_asm_ipv4\" "$f" | cut -d: -f2-`;
    if ($asm_ip eq "") {
      $ipv4 = `grep \"toSD: true\" "$f" -B3 | grep -P \"egress: { L.*/R\\d+\\.\\d+\\.\\d+\\.\\d+:\" -m1`;
      if ($ipv4 =~ /R(\d+\.\d+\.\d+\.\d+)/) {
        $asm_ip = $1;
      }
    }

    # Get SIP container IPv6
    $asm_ipv6 = `grep \"### traceSM local_asm_ipv6\" "$f" | cut -d: -f2-`;
    if ($asm_ip eq "") {
      $ipv6 = `grep \"toSD: true\" "$f" -B3 | grep -P \"egress: { L.*/R\\[\[^\\]\]+\" -m1`;
      if ($ipv6 =~ /R\[([^\]]+)\]/) {
        $asm_ipv6 = $1;
      }
    }
  } elsif ($sm_name ne "") {
    # Get Asset IP
    $ipv4 = `grep -P \"(egress|ingress): { L\\d+\\.\\d+\\.\\d+\\.\\d+:\" "$f" -m1`;
    if ($ipv4 =~ /L(\d+\.\d+\.\d+\.\d+)/) {
      $core_sms{$sm_name}{sm100_ip} = $1;
    }

    # Get Asset IPv6
    $ipv6 = `grep -P \"(egress|ingress): { L\\[\[^\\]\]+\" "$f" -m1`;
    if ($ipv6 =~ /L\[([^\]]+)\]/) {
      $core_sms{$sm_name}{sm100_ipv6} = $1;
    }

    # Get SIP container IP
    $ipv4 = `grep \"toSD: true\" "$f" -B3 | grep -P \"egress: { L.*/R\\d+\\.\\d+\\.\\d+\\.\\d+:\" -m1`;
    if ($ipv4 =~ /R(\d+\.\d+\.\d+\.\d+)/) {
      $core_sms{$sm_name}{ip} = $1;
    }

    # Get SIP container IPv6
    $ipv6 = `grep \"toSD: true\" "$f" -B3 | grep -P \"egress: { L.*/R\\[\[^\\]\]+\" -m1`;
    if ($ipv6 =~ /R\[([^\]]+)\]/) {
      $core_sms{$sm_name}{ipv6} = $1;
    }
  }
}

sub set_already_seen {
  $sm_name = @_[0];
  if (!exists($map_sms{$sm_name})) {
    my @sm100_already_seen = ();
    foreach my $sm (keys %map_sms) {
      if ($sm ne "local") {
        push(@sm100_already_seen, $core_sms{$sm}{sm100_ip});
      } else {
        push(@sm100_already_seen, $sm100_ip);
      }
    }
    $map_sms{$sm_name} = &share({});
    foreach (@sm100_already_seen) {
      $map_sms{$sm_name}{$_} = 1;
    }
  }
#print TMP "map_sms updated:\n";
#print TMP Dumper %map_sms;
#print TMP "\ncore_sms updated:\n";
#print TMP Dumper %core_sms;
#print TMP "-----------------------------------\n"; 
}

sub set_tls_ips_off_line {
  # TLS files. Reorder the files to start processing the oldest file first
  @tls_files = sort {-M $b <=> -M $a} @tls_files;
  foreach $f (@tls_files) {
    if ($sm100_ip eq "uknown") {
      $sm100_ip = `grep "Added by traceSM - Asset IP:" -m1 "$f"`;
      if ($sm100_ip =~ /Asset IP: ([^ ]*)( IPv6: (.*))?$/) {
        $sm100_ip = $1;
        $sm100_ipv6 = $3;
      } else {
        die_message("Cannot find the SM100 IP (\"Added by traceSM...\") in the TLS file $f\n");
      }
    }
  }
}

